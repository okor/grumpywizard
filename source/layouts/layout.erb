<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Middleman" %></title>

    <link href='//fonts.googleapis.com/css?family=Lato:300,400' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Iceland' rel='stylesheet' type='text/css'>

    <%= stylesheet_link_tag :site %>
    <%= stylesheet_link_tag :cocoen %>

    <%= javascript_include_tag :jquery %>
    <%= javascript_include_tag 'jquery.mobile-events.min' %>
    <%= javascript_include_tag 'jquery.cocoen' %>
  </head>

  <body class="<%= page_classes %>">

    <div class="nav">
      <div>GRUMPY WIZARD</div>
      <a href='/'>tests</a>
    </div>

    <div class="main">
      <%= yield %>
    </div>

  </body>
